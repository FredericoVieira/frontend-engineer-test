{
  parser: "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "never"
    ],
    "max-len": [2, 120, {
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreComments": true,
    }],
    "prop-types": [2],
    "no-extra-semi": 2,
  },
  "extends": ["eslint:recommended", "airbnb", "plugin:react/all"],
}